{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "build/",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}